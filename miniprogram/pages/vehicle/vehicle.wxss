
/**vehicle.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  padding: 60rpx 30rpx;
  background-color: #07C160;
}

.title {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07C160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #07C160;
  border-radius: 2rpx;
}

.content {
  flex: 1;
  padding: 20rpx;
}

.vehicle-list {
  display: flex;
  flex-direction: column;
}

.vehicle-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vehicle-info {
  display: flex;
  flex-direction: column;
}

.license-plate {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.vehicle-type {
  font-size: 24rpx;
  color: #999;
}

.vehicle-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status.success {
  background-color: #e8f7ef;
  color: #07C160;
}

.status.pending {
  background-color: #fef0f0;
  color: #f56c6c;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
